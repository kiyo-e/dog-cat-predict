<div class="starter-template">
  <h1>Dog or Cat?</h1>
    <p class="lead">
      CNN実装のdog cat判定の実装.
    </p>

    <%= form_with model: @form, url: predict_path, multipart: true, class: "form-inline", data: { remote: false } do |f| %>
        <%= f.file_field :file, required: true, class: "form-control mr-sm-2" %>
        <%= f.submit :submit, class: "btn btn-outline-success", data: { disabled_with: "送信中..." } %>
    <% end %>

    <% if @form.image.present? %>
    <% end %>

    <% if @form.result.present? %>
      <%= @form.result %>
    <% end %>
</div>

